#start of bar section
bar {
    separator_symbol " | "
    status_command py3status -c ~/.config/i3/i3top.conf
    position top
    tray_output none
    
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $lightgreen
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $aqua $blue $fg
        inactive_workspace   $gray $lightblue $bg
        active_workspace     $gray $lightblue $bg
        urgent_workspace     $red $red $bg
    }
}

